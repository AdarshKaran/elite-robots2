    </joint>

    <!-- flange -->
    <link name="${tf_prefix}flange" />
    <joint name="${tf_prefix}flange_joint" type="fixed">
        <origin xyz="0 0 0" rpy="0 0 0" />
        <parent link="${tf_prefix}link6" />
        <child link="${tf_prefix}flange" />
    </joint>

    </xacro:macro>

</robot>
