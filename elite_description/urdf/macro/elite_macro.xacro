            </material>
        </visual>
        <collision>
            <geometry>
                <mesh filename="package://elite_description/meshes/ec66/link6.stl"/>
            </geometry>
        </collision>
    </link>
    <joint name="${tf_prefix}joint6" type="revolute">
        <origin xyz="${joint6_xyz}" rpy="${joint6_rpy}" />
        <parent link="${tf_prefix}link5" />
