<?xml version="1.0"?>
<robot xmlns:xacro="http://wiki.ros.org/xacro">
    <!-- 
        Author: Adarsh Karan K P
    -->
    
    <xacro:include filename="$(find elite_description)/urdf/macro/elite_common.xacro" />

    <xacro:macro name="elite_robot" params="
    name
    tf_prefix
    parent
    *origin
    joint_limits_parameters_file
    kinematics_parameters_file
    physical_parameters_file"
    >

    <!-- Load parameters -->
    <xacro:read_model_data
        joint_limits_parameters_file="${joint_limits_parameters_file}"
        kinematics_parameters_file="${kinematics_parameters_file}"
        physical_parameters_file="${physical_parameters_file}"
    />
    <!-- World Link and Joint- needed when launching only the arm -->
    <xacro:if value="${parent == 'world'}">
        <link name="${tf_prefix}world" />
    </xacro:if>

    <joint name="${tf_prefix}${parent}_joint" type="fixed">
    <xacro:insert_block name="origin" />
    <parent link="${parent}" />               
    <child link="${tf_prefix}base_link" />
    </joint>

    <!-- Base Link -->
    <link name="${tf_prefix}base_link">
        <inertial>
        <origin xyz="${base_link_origin}" rpy="0 0 0"/>
        <mass value="${base_link_mass}"/>
        <inertia ixx="${base_link_ixx}" ixy="${base_link_ixy}" ixz="${base_link_ixz}"
                    iyy="${base_link_iyy}" iyz="${base_link_iyz}" izz="${base_link_izz}"/>
        </inertial>
        <visual>
        <geometry>
            <mesh filename="package://elite_description/meshes/ec66/base_link.stl"/>
        </geometry>
        <material name="">
            <color rgba="1 1 1 1" />
        </material>
        </visual>
        <collision>
        <geometry>
            <mesh filename="package://elite_description/meshes/ec66/base_link.stl"/>
        </geometry>
        </collision>
    </link>

    <!-- link1 and joint1 -->
    <link name="${tf_prefix}link1">
        <inertial>
            <origin xyz="${link1_origin}" rpy="0 0 0"/>
            <mass value="${link1_mass}" />
            <inertia 
                ixx="${link1_ixx}" 
                ixy="${link1_ixy}" 
                ixz="${link1_ixz}" 
                iyy="${link1_iyy}" 
                iyz="${link1_iyz}" 
                izz="${link1_izz}" />
        </inertial>
        <visual>
            <geometry>
                <mesh filename="package://elite_description/meshes/ec66/link1.stl"/>
            </geometry>
            <material name="">
                <color rgba="1 1 1 1" />
            </material>
        </visual>
        <collision>
            <geometry>
                <mesh filename="package://elite_description/meshes/ec66/link1.stl"/>
            </geometry>
        </collision>
    </link>
    <joint name="${tf_prefix}joint1" type="revolute">
        <origin xyz="${joint1_xyz}" rpy="${joint1_rpy}" />
        <parent link="${tf_prefix}base_link" />
        <child link="${tf_prefix}link1" />
        <axis xyz="0 0 1" />
        <limit 
            lower="${joint1_lower}"
            upper="${joint1_upper}"
            effort="${joint1_effort}"
            velocity="${joint1_velocity}" 
        />
        <dynamics damping="${joint_dynamics_joint1_damping}"
                    friction="${joint_dynamics_joint1_friction}"/>
    </joint>

    <!-- link2 and joint2 -->
    <link name="${tf_prefix}link2">
        <inertial>
